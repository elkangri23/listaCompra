{
  "name": "lista-compra-colaborativa",
  "version": "1.0.0",
  "description": "Sistema de gestiÃ³n de listas de compra colaborativas con arquitectura limpia",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/e2e/jest-e2e.json",
    "test:email": "ts-node -r tsconfig-paths/register scripts/test-email.ts",
    "test:email:config": "ts-node -r tsconfig-paths/register scripts/test-email-config.ts",
    "test:email:integration": "jest tests/integration/messaging/email.integration.test.ts",
    "test:workers": "ts-node -r tsconfig-paths/register scripts/test-workers.ts",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:reset": "npx prisma migrate reset",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "ts-node -r tsconfig-paths/register src/infrastructure/persistence/prisma/seed.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "shopping-list",
    "collaborative",
    "clean-architecture",
    "typescript",
    "nodejs",
    "postgresql",
    "rabbitmq",
    "prisma"
  ],
